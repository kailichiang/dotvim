# Fork CMS specific HTML
snippet iteration
	{iteration:${1:name}}
		${2}
	{/iteration:$1}
snippet option
	{option:${1:name}}
		${2}
	{/option:$1}
snippet fitem
	<p>
		<label for="${1:inputID}">${2:label}</label>
		{${3:field}} {$3Error}
	</p>
snippet box
	<div class="box">
		<div class="heading">
			<h3><label for="${1:ID}">{$lbl${2:Label}|ucfirst}</label></h3>
		</div>
		<div class="options">
			{${3:field}} {$3Error}
		</div>
	</div>
